<div class='nested-fields'>
  <div class='field'>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div id='subtasks'>
    <%= f.fields_for :subtasks do |s| %>
      <%= render 'subtask_fields', f: s %>
    <% end %>
    <div class='links'>
        <%= link_to_add_association t('models.subtask.add', scope: :activerecord), f, :subtasks %>
    </div>
  </div>
  <%= link_to_remove_association t('models.task.remove', scope: :activerecord), f %>
</div>